# Database
DATABASE_URL="mongodb://user:password@localhost:27017/swarm_board?authSource=admin&replicaSet=rs0"

# JWT
JWT_SECRET="your-secret-key-change-this-in-production"
JWT_EXPIRES_IN="30d"

# Server
PORT=3001
NODE_ENV="development"

# CORS
CORS_ORIGIN="http://localhost:3000"

# Webhooks
WEBHOOK_RETRY_MAX_ATTEMPTS=3
WEBHOOK_RETRY_DELAY_MS=1000

# Development - Skip capability checks for easier testing (set to false in production)
SKIP_CAPABILITY_CHECK=true
